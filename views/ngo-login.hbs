<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../style.css">
        <link rel="stylesheet" href="../styles/admin-login.css">
        <title>NGO</title>

    </head>

    <body>
        <div class="wrapper">
        <nav class="nav-bar " >
                <ul>
                    <li><a href="/">Home</a></li>
                    {{!-- <li><a href="#about-us">About US</a></li>
                    <li><a href="#support">Contact</a></li> --}}
                    <li class="drop-link">
                        <a href="#">Sign In</a>
                        <ul class="drop-nav " id="pages-nav">
                            <li><a href="/admin-login">Admin</a></li>
                            <li><a href="/restaurant-login">Restaurant</a></li>
                            <li><a href="/ngo-login">NGO</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
    </div>
        <div class="admin-log">
            <h1>NGO Login</h1>
            {{#if successMsg}}
                <h5 class="success">{{successMsg}}</h5>
            {{/if}}
            {{#if errorMsg}}
                <h5 class="danger">{{errorMsg}}</h5>
            {{/if}}
            <form class="admin-login" action="/auth/ngo-login" method="post" autocomplete="off">
                <div class="material-textfield">
                    <input placeholder=" " required name="ngoEmail" class="ngo-user" type="email">
                    <label>Email</label>
                </div>
                <div class="material-textfield">
                    <input placeholder=" " required name="ngoPassword" class="ngo-pass" type="password">
                    <label>Password</label>
                </div>

                <div class="material-textfield">
                    <input placeholder=" " class="submit" type="submit" value="Sign In">
                </div>
                <div class="sub-head">
                    <spam>or</spam>
                    <h3>Sign IN</h3>
                    <spam>as</spam>
                </div>
                <div class="material-textfield" id="other-sign">
                    <div class="sign-link">
                        <a href="/admin-login" id="ngo">Admin</a>
                    </div>
                    <div class="sign-link">
                        <a href="/restaurant-login" id="restaurant">Restaurant</a>
                    </div>
                </div>
            </form>
            <div>
    </body>

</html>
